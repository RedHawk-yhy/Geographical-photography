.waterfall {
  box-sizing: border-box;
  position: relative;
}

.waterfall-inner {
  position: relative;
  height: 100%;
}


.loading,
.all-loaded {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  padding-top: 15rpx;
  font-size:24rpx;
  color:#999;
}
.all-loaded-line {
  position: absolute;
  width: 500rpx;
  height: 2rpx;
  transform: scaleY(0.5);
  background: rgba(153, 153, 153, 0.5);
  z-index: 9;
}
.all-loaded-text,
.empty {
  display: inline-block;
  padding: 0 20rpx;
  background: rgba(246,246,246,1);
  z-index: 10;
}

.empty {
  padding: 0;
  width: 100vw;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  font-size: 30rpx;
  color:#999;
}

.loading-icon {display:inline-block; margin-right:8rpx; vertical-align:middle; -webkit-animation:weuiLoading 1s steps(12, end) infinite; animation:weuiLoading 1s steps(12, end) infinite; width:32rpx; height:32rpx; background:transparent url(data:image/svg+xml;base64,) no-repeat; background-size:100% 100%;}

.placeholder {
  height: 82rpx;
}