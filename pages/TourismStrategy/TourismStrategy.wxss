/* pages/PhotographySkills/PhotographySkills.wxss */
.container{
  padding: 20rpx;
}

.item{
  overflow: hidden;
  margin: 20rpx 0;
}

.item image{
  float: left;
  width: 40%;
  margin-right: 10rpx;
}

.title{
  color: #55a630;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.content{
  font-size: 24rpx;
  margin: 10rpx 0;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
} 
.author text{
  margin-top: 20rpx;
  font-size: 24rpx;
}

.author text:nth-child(2){
  margin-left: 20rpx;
}

.bottomText{
  height:100rpx;
  font-size:30rpx;
  text-align:center;
  color: #aaa;
}