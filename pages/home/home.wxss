/* pages/home/home.wxss */
page{
  padding: 0;
  margin: 0;
}
.underline{
  text-decoration: underline;
}
.userInfo{
  padding-top: 40rpx;
  background-color: #38b48b;
  overflow: hidden;
  color: white;
  /* height: 400rpx; */
}
.avator{
  margin-left: 40rpx;
  float: left;
}
.nickName{
  /* position: relative; */
  float: left;
  margin-left: 40rpx;
  font-size: 36rpx;
}
.exits{
  position: absolute;
  right: 20rpx;
  /* top: 10rpx; */
  font-size: 28rpx;
}
.menu{
  padding-left: 40rpx;
}
.autograph{
  clear: both;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}
.setting{
  float: right;
  font-size: 30rpx;
  margin-top: 4rpx;
}
.title{
  box-shadow: black ;
}

.container{
  padding: 20rpx;
}

.item{
  overflow: hidden;
  margin: 20rpx 0;
}

.item image{
  float: left;
  width: 40%;
  margin-right: 10rpx;
}

.title{
  font-size: 26rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.content{
  font-weight: 400;
  font-size: 24rpx;
  margin: 16rpx 0;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bottomText{
  height:100rpx;
  font-size:30rpx;
  text-align:center;
  color: rgb(97, 97, 97);
}
.option .star{
  width: 30rpx;
  position: absolute;
  right: 24rpx;
  bottom: 28rpx;
}

.delete{
  width: 65px;
  height: 100%;
  background: #EE0A24;
  color: white;
  text-align: center;
  line-height: 136px;
  font-weight: 300;
}
.container .image{
  width: 130px;
  margin: 0 30rpx;
}
.footTxt{
  overflow: hidden;
  margin-right: 30rpx;
  color: rgb(117, 117, 117);
}
.item .footTitle{
  margin-bottom: 50rpx;
}
.delFootMark{
  margin-left: 10rpx;
}
.price text{
  margin-top: 5px;
  margin-left: 140px;
}
.price .num{
  color: rgb(165, 165, 165);
  font-size: 20rpx;
  float: right;
  margin-top: -14px;
}
.totalPrice{
  float: right;
  margin-top: 5px;
  font-size: 30rpx;
  color: #EE0A24;
}
.options{
  position: relative;
}
.option .optionBtn{
  position: absolute;
  bottom: 20rpx;
  right: 0;
}

