.banner{
  width: 100%;
  height: 100%;
}
.cardList{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.card{
  width: 46%;
  margin: 15rpx;
}
.card image{
  width: 100%;
}
.card .content{
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}