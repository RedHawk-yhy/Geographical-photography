
.banner{
  width: 100%;
  height: 100%;
}
.cardList{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.card{
  width: 46%;
  margin: 15rpx;
}
.card image{
  width: 100%;
}
.card .content{
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.searchText{
  background: rgb(255, 255, 255);
  width: 750rpx;
  height:500rpx;
  position: absolute;
  top: 90rpx;
  z-index: 9;
  padding-left: 30rpx;
}
.searchTagWrap{
  margin-top: 10rpx;
  position: relative;
}
.searchTag{
  margin-bottom: 20rpx;
}
.tagWrap{
  margin-top: 30rpx;
}
.tag{
  margin:10rpx;
}
.delImage{
  width: 30rpx;
  position: absolute;
  right: 60rpx;
  top: 8rpx;
}
